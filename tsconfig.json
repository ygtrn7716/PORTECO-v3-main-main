
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,

    "skipLibCheck": true,               // <-- ÖNEMLİ: node_modules tip kontrolünü geç
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    }
  }
}
